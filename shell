export EDITOR=nano
export DOTFILES_PATH=$HOME/dotfiles

# Only allow unique entries in the PATH variable

alias 'ls'='ls --color'
alias 'll'='ls -lh'
alias 'la'='ls -ah'
alias 'lla'='ls -lah'
alias '..'='cd ..'

alias 'e'=$EDITOR

typeset -U path
path+=(
  "${HOME}/bin"
  "${HOME}/.bin"
  "${HOME}/.local/bin"
  "${HOME}/.cargo/bin"
  "/usr/local/bin"
  "/usr/bin"
  "/usr/sbin"
  "/bin"
  "/sbin"
)

export HISTFILE=~/.cache/.zsh_history
export SAVEHIST=100
export HISTSIZE=10000
setopt HIST_IGNORE_DUPS
setopt INC_APPEND_HISTORY

source $DOTFILES_PATH/src/std.zsh
source $DOTFILES_PATH/src/prompt.zsh
source $DOTFILES_PATH/src/tools.zsh
source $DOTFILES_PATH/src/secrets.zsh

# see if we need some local overrides
[[ -f $HOME/.zshrc.local ]] && source $HOME/.zshrc.local

# some things to grab
[[ $missing_cmds != "" ]] && echo "* grab missing: '$missing_cmds' with 'einstall'"

[[ $commands[fortune] ]] && echo "\n$(fortune -s)\n"

# all good, ignore the appended crap
return 0
