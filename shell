export EDITOR=nano
export DOTFILES_PATH=$HOME/dotfiles

# Only allow unique entries in the PATH variable
typeset -U path

alias 'ls'='ls --color'
alias 'll'='ls -lh'
alias 'la'='ls -ah'
alias 'lla'='ls -lah'

alias 'e'=$EDITOR

path+=(
  "${HOME}/bin"
  "${HOME}/.bin"
  "${HOME}/.local/bin"
  "${HOME}/.cargo/bin"
  "/usr/local/bin"
  "/usr/bin"
  "/usr/sbin"
  "/bin"
  "/sbin"
)

source $DOTFILES_PATH/std.zsh
source $DOTFILES_PATH/tools.zsh
source $DOTFILES_PATH/secrets.zsh

# see if we need some local overrides
[[ -f $HOME/.zshrc.local ]] && source $HOME/.zshrc.local

# some things to grab
[[ $missing_cmds != "" ]] && echo "* grab missing: $missing_cmds"

[[ $commands[fortune] ]] && echo "\n$(fortune -s)\n"

# all good, ignore the appended crap
return 0